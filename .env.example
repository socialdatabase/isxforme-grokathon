# ===========================================
# ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update with your values
# Command: cp .env.example .env

# ===========================================
# Django Settings
# ===========================================
# Set to False for production, True for local development
DEBUG=True

# SECURITY WARNING: Generate a strong secret key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# For local dev, this default is fine:
SECRET_KEY=django-insecure-dev-key-CHANGE-THIS-IN-PRODUCTION

# Comma-separated list of allowed hostnames
# Development: Use * or localhost,127.0.0.1
# Production: Use your actual domain(s) like yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=*

# ===========================================
# Database Configuration
# ===========================================
DB_NAME=rapid_django_vue
DB_USER=postgres
# Development: 'postgres' is fine
# Production: Use a strong password!
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed frontend URLs
# Development: http://localhost:3000
# Production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Nuxt Frontend Configuration
# ===========================================
# Backend API URL
# Development: http://localhost:8000/api
# Production: https://yourdomain.com/api
NUXT_PUBLIC_API_BASE=http://localhost:8000/api

X_BEARER_TOKEN=CHANGE
